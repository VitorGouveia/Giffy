{
  "name": "@giffy/ui",
  "version": "0.1.0",
  "description": "The UI library of Giffy's Design System",
  "author": "Vitor Gouveia <vitorneves.gouveia10@gmail.com>",
  "repository": "https://github.com/VitorGouveia/Giffy",
  "license": "MIT",
  "private": true,
  "main": "./dist/index.js",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "build:deprecated": "rimraf build && babel src --extensions \".ts,.tsx,.mdx\" --out-dir build --copy-files --no-copy-ignored && tsc -p tsconfig.prod.json",
    "build": "rimraf dist && rollup -c",
    "dev": "rimraf dist && rollup -w -c && tsc -p tsconfig.prod.json",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build-storybook-nextjs": "build-storybook -o ../../apps/web/public/storybook --docs",
    "release": "release-it"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.10",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@mdx-js/react": "^1.6.22",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@storybook/addon-actions": "^6.4.15",
    "@storybook/addon-centered": "^5.3.21",
    "@storybook/addon-docs": "^6.4.14",
    "@storybook/addon-essentials": "^6.4.14",
    "@storybook/addon-links": "^6.4.14",
    "@storybook/addon-viewport": "^6.4.14",
    "@storybook/addons": "^6.4.14",
    "@storybook/react": "^6.4.14",
    "@storybook/theming": "^6.4.14",
    "@types/node": "^17.0.10",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.3",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "babel-preset-minify": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "react": "17.0.2",
    "react-classname-prefix-loader": "^1.0.8",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "rollup": "^2.66.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-progress": "^1.1.2",
    "rollup-plugin-terser": "^7.0.2"
  },
  "peerDependencies": {
    "@giffy/styles": "*",
    "react": "*",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "date-fns": "^2.28.0",
    "react-github-btn": "^1.2.1",
    "release-it": "^14.12.3",
    "rimraf": "^3.0.2"
  }
